<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThanhToan">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/snacks_icon"
        android:layout_marginLeft="1dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="ĐẶT HÀNG THÀNH CÔNG"
        android:textSize="21dp"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/textView5"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" VUI LÒNG THANH TOÁN TOÁN KHI NHẬN HÀNG" />

    <TextView
        android:id="@+id/textView6_sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng hóa đơn của bạn "
        android:gravity="center"
        android:textSize="14dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/textView7_gia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16dp"
        android:text="500.000 VNĐ"
        android:textColor="@color/red"/>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/red"
        android:text="Trở về Trang CHủ" />

</LinearLayout>